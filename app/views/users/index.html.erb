<h1>Listing users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Rated beers</th>
      <th>Total ratings</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td><% if current_user && current_user.admin && user.frozn %>
          <span class="label label-info">Account frozen</span>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>