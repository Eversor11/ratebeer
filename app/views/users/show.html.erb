<p id="notice"><%= notice %></p>

<h2><%= @user.username %></h2>

<p>
	<% if @user.ratings.empty? %>
		Has not yet made ratings!
	<% else %>
		Has made <%= pluralize(@user.ratings.count, "rating") %>, average <%= @user.average_rating %>
	<% end %>
</p>

<% if @user.beer_clubs.any? %>
	<h3>Memberships</h3>
	<ul>
		<% @user.beer_clubs.each do |beerclub| %>
			<li><%= link_to beerclub.name, beerclub %></li>
		<% end %>
	</ul>
<% end %>

<h3>Ratings</h3>

<% if @user.ratings.empty? %>
	<p>Has not yet made ratings!</p>
<% else %>
	<ul>
		<% @user.ratings.each do |rating| %>
			<li> <%= rating %> 
				 <% if @user == current_user %>
				 	<%= link_to 'Delete', rating, method: :delete, data: { confirm: 'Are you sure?'} %>
				 <% end %>
			</li>
		<% end %>
	</ul>
<% end %>

<% if @user == current_user %>
	<%= link_to 'Edit', edit_user_path(@user) %>
	<%= link_to 'Close account', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', users_path %>
